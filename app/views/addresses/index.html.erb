<h1>Listing Addresses</h1>

<table class="addresses">
  <thead>
    <tr>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th>Extant</th>
      <th>Current</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.address %></td>
        <td><%= address.city %></td>
        <td><%= address.state %></td>
        <td><%= address.longitude %></td>
        <td><%= address.latitude %></td>
        <td><%= address.extant %></td>
        <td><%= address.current %></td>
        <td><%= address.notes %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <% if false %>
           <td><%= link_to 'Add Coords', edit_coord_path(address) %></td> %>
         <% end %>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

