<p id="notice"><%= notice %></p>
<% provide(:title, 'All users') %>
<h1>All people</h1>

<table>
  <thead>
    <tr class="people">
      <th class="given-name">First</th>
      <th class="last-name">Last</th>
      <th>Date of birth</th>
      <th>Date of entry</th>
      <th>Doe source</th>
      <th>Date of citizenship</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.sort_by(&:name).each do |person| %>
      <tr class="people">
        <td class="given-name"><%= person.given_name %></td>
        <td><%= person.last_name %></td>
        <td><%= person.Date_of_Birth %></td>
        <td><%= person.Date_of_Entry %></td>
        <td><%= person.DoE_Source %></td>
        <td><%= person.Date_of_Citizenship %></td>
        <td><%= person.notes %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

