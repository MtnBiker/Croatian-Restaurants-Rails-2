<% provide(:title, 'All users') %>
<h1>All people</h1>

<table class = "pretty">
  <thead>
    <tr class="people">
      <th class="given-name"><%= link_to "First", :sort => "given_name"           %></th>
      <th class="last-name" ><%= link_to "Last",  :sort => "last_name"            %></th>
      <th><%= link_to "Date of birth",            :sort => "date_of_birth"        %></th>
      <th><%= link_to "Date of entry",            :sort => "date_of_entry"        %></th>
      <th><%= link_to "Doe source",               :sort => "doe_source"           %></th>
      <th><%= link_to "Date of citizenship",      :sort => "date_of_citizenship"  %></th>
      <th><%= link_to "Notes",                    :sort => "given_name"           %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% for person in @people %>
  <tbody>
   
      <tr class="people">
        <td class="given-name"><%= person.given_name %></td>
        <td class="last-name" ><%= person.last_name  %></td>
        <td>                   <%= person.date_of_birth %></td>
        <td>                   <%= person.date_of_entry %></td>
        <td>                   <%= person.doe_source %></td>
        <td>                   <%= person.date_of_citizenship %></td>
        <td>                   <%= person.notes %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
   
  </tbody>
  <% end %>
</table>

