<p id="notice"><%= notice %></p>

<h1>Listing Addresses</h1>

<table class="addresses pretty">
  <thead>
    <tr>

      <th><%= sortable "address" %></th>
      <th><%= sortable "city" %></th>
      <th><%= sortable "longitude" %></th>
      <th><%= sortable "latitude" %></th>
      <th><%= sortable "extant" %></th>
      <th><%= sortable "current_description", "Current" %></th>
      <th><%= sortable "notes" %></th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.address %></td>
        <td><%= address.city %></td>
        <td><%= address.longitude %></td>
        <td><%= address.latitude %></td>
        <td><%= address.extant %></td>
        <td><%= address.current_description %></td>
        <td><%= address.notes %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <% if false %>
           <td><%= link_to 'Add Coords', edit_coord_path(address) %></td> %>
         <% end %>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Address', new_address_path , class: "btn btn-primary"%>
<%= render 'layouts/footer' %>
