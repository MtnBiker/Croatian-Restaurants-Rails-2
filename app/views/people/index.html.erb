<p id="notice"><%= notice %></p>
<% provide(:title, 'All users') %>
<h1>People</h1>

<table class="pretty">
  <thead>
    <tr class="people">
      <th><%= sortable "id" , "ID"       %></th>
      <th class="given-name"><%= sortable "given_name", "First"   %></th>
      <th class="last-name" ><%= sortable "last_name" , "Last"  %></th>
      <th><%= sortable "date_of_birth"        %></th>
      <th><%= sortable "date_of_entry"        %></th>
      <th><%= sortable "doe_source", "DoE Source"           %></th>
      <th><%= sortable "date_of_citizenship"  %></th>
      <th><%= sortable "notes"           %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% for person in @people %>
  <tbody>
      <tr class="people">
        <td class="given-name"><%= person.id %></td>
        <td class="given-name"><%= person.given_name %></td>
        <td class="last-name" ><%= person.last_name  %></td>
        <td>                   <%= person.date_of_birth %></td>
        <td>                   <%= person.date_of_entry %></td>
        <td>                   <%= person.doe_source %></td>
        <td>                   <%= person.date_of_citizenship %></td>
        <td>                   <%= person.notes %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  </tbody>
  <% end %>
</table>

<br>

<%= link_to 'New Person', new_person_path %>
<%= render 'layouts/footer' %>